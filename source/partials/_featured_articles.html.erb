<% if  articles != nil && articles.length > 0 %>
  <section class="c-section">
    <h2 class="c-section__heading">Latest articles</h2>
    <div class="o-flexbox o-flexbox--wrap o-flexbox--center">
      <% articles.each do |article| %>
        <article class="c-featured-article" itemprop="blogPost" itemscope itemtype="https://schema.org/BlogPosting">
          <meta itemprop="dateCreated" content="<%= article[:date_created_on] %>">
          <meta itemprop="datePublished" content="<%= article[:date_published_on] %>">
          <meta itemprop="dateModified" content="<%= article[:date_modified_on] %>">
          <meta itemprop="keywords" content="<%= article[:keywords] %>">
          <meta itemprop="publisher" content="<%= article[:author] %>">

          <% if article[:lang] %>
            <meta itemprop="inLanguage" content="<%= article[:lang] %>">
          <% else %>
            <meta itemprop="inLanguage" content="en_US">
          <% end %>

          <!-- DIVERSITY IS KEY -->
          <span itemprop="audience" itemscope itemtype="http://schema.org/PeopleAudience">
              <meta itemprop="gender" content="any">
          </span>

          <% if article[:image] %>
            <img class="c-featured-article__image" src="<%= article[:image] %>" alt="<%= article[:image_alt] %>">
          <% end %>

          <header>
            <h2 itemprop="headline" class="c-featured-article__title">
              <a href="<%= article[:url] %>" title="<%= article[:title] %>">
                <%= article[:title] %>
              </a>
            </h2>
          </header>

      <!--       <section itemprop="articleBody" class="c-featured-article__excerpt">
            <%= article[:excerpt] %>
          </section> -->

          <footer itemprop="author" itemscope itemtype="https://schema.org/Person">
              By <a rel="author" href="/about" itemprop="name" title="<%= article[:author] %>">
                <%= article[:author] %>
              </a>
              on
              <time datetime="<%= article[:date_published_on] %>">
                  <%= article[:date_published_on] %>
              </time>
          </footer>
        </article>
      <% end %>
    </div>
  </section>

  <section class="c-cta c-cta__secondary c-section">
    <a class="o-link--bare c-cta__button" href="/blog">Go to the blog</a>
  </section>
<% end %>
